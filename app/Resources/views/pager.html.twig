{% if pageCount > 1 %}
    {% set anchor = anchor is defined ? '#'~anchor : ''  %}
<nav aria-label="Page navigation">
    <ul class="pagination">
    {% if previous is defined %}
        <li>
            <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}{{ anchor }}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
    {% endif %}
    {% for page in pagesInRange %}
        {% if page != current %}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): page})) }}{{ anchor }}">{{ page }}</a>
            </li>
        {% else %}
            <li class="current"><a href="#">{{ page }}</a></li>
        {% endif %}
        {% endfor %}
        {% if next is defined %}
        <li>
            <a href="{{ path(route, query|merge({(pageParameterName): next})) }}{{ anchor }}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
        {% endif %}
    </ul>
</nav>
{% endif %}