{% extends ':default:layout.html.twig' %}
{% block body %}
    <h1>News</h1>
<div class="row">
    <div id="main">
        <div id="login-help" class="col-sm-9">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>Title</th>
                    <th>Description</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ news.id }}</td>
                    <td>{% if news.date %}{{ news.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{{ news.title }}</td>
                    <td>{{ news.description }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div id="sidebar">
        <div id="login-help" class="col-sm-3">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th>Random news</th>
                </tr>
                </thead>
                <tbody>
                {% if list %}
                    {% for item in list %}
                        <tr>
                            <td><a href="{{ path('news_show', { 'id': item.id }) }}">- {{ item.title }}</a></td>
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>
<a href="{{ path('news') }}" class="btn btn-info" role="button">Back to the list</a>
{% endblock %}
