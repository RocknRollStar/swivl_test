{% extends ':default:layout.html.twig' %}
{% block body %}
    <div class="row">
        <div id="main">
            <div id="login-help" class="col-sm-10">
                <h3>
                    <i class="fa fa-long-arrow-left"></i>
                  News list
                </h3>

                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Date</th>
                        <th>Title</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if list %}
                        {% for item in pagination %}
                            <tr>
                                <td><a href="{{ path('news_show', { 'id': item.id }) }}">{{ item.id }}</a></td>
                                <td>{{ item.date.date }}</td>
                                <td><a href="javascript:void(0)" data-toggle="tooltip" title="{{ item.description }}">{{ item.title }}</a></td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
                {% if pagination %}
                    {{ knp_pagination_render(pagination) }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

